
@{
    ViewBag.Title = "RequsetPlacement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using TechPlacement.Model;

@model IEnumerable<CandidateResults>
<h2>Result</h2>

<div class="body flex-grow-1" style="padding-left:0px !important;">
    <div class="container-lg px-0">
        <form class="form-control">
            <div class="row">

                <div class="col-12">

                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12" style="overflow: auto; ">
                                <table id="example" class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        @{

                                            <tr>
                                                <th> Name</th>
                                                <th>Company Name</th>
                                                <th>Round Name </th>
                                                <th>Round Result</th>

                                                <th></th>
                                                <th>Push Offer Letter</th>
                                            </tr>

                                        }

                                    </thead>
                                    <tbody>
                                        @{
                                            foreach (var result in Model)
                                            {

                                        <tr>
                                            <td style="display:none">@result.RID</td>
                                            <td style="display:none">@result.SId</td>
                                            <td style="display:none">@result.CId</td>

                                            <td> @result.Name</td>
                                            <td> @result.CName</td>
                                            <td style="display:none"> @result.RoundName</td>
                                            <td style="display:none"> @result.RoundResult</td>

                                            <td> @result.RoundText</td>
                                            <td> @result.Status</td>
                                            <td style="display:none"> @result.OfferLetter</td>
                                            <td class="EditRecord">
                                                <button type="button" id="EditRec" class="btn btn-primary" onclick="setValue()" data-toggle="modal" data-target="#exampleModalCenter">
                                                    Edit
                                                </button>
                                                @*<a class="btn btn-primary btnResultEdit" id="ResultEdit @result.RID"> Edit </a>*@
                                            </td>
                                            <td width="200px">
                                                <input type="file" class="form-control" id="customFile"  />
                                            </td>
                                        </tr>

                                            }

                                        }
                                    </tbody>

                                </table>

                            </div>

                        </div>

                    </div>
                </div>
                <div class="col-12">

                </div>
            </div>
            <input type="hidden" id="ResultId" />
            <input type="hidden" id="studId" />
            <input type="hidden" id="companyId" />
        </form>
    </div>
</div>

<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Update Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="row justify-content-start">
                    <div class="col-4">
                        Name
                    </div>
                    <div class="col-4">
                        <label id="EditName" value="" />
                    </div>
                </div>
                <div class="row justify-content-start">
                    <div class="col-4">
                        Company
                    </div>
                    <div class="col-4">
                        <label id="CompanyName" value="" />
                    </div>
                </div>

                <div class="row justify-content-start">
                    <div class="col-4">
                        Round
                    </div>
                    <div class="col-4">
                        <select id="drpRound" class="form-select" aria-label="Default select example">
                            <option selected>Open this select menu</option>
                            <option value="1">HR</option>
                            <option value="2">Technical</option>
                            <option value="3">First Round</option>
                        </select>
                    </div>
                </div>

                <div class="row justify-content-start">
                    <div class="col-4">
                        Status
                    </div>
                    <div class="col-4">
                        <select id="drpStatus" class="form-select" aria-label="Default select example">
                            <option value="1">Selected</option>
                            <option value="2">Rejected</option>
                        </select>
                    </div>
                </div>

